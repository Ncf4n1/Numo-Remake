<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NuMo_Test.Views.VisualizePage"
             xmlns:vm="clr-namespace:NuMo_Test.ViewModels"
             xmlns:views="clr-namespace:SkiaSharp.Views.Forms;assembly=SkiaSharp.Views.Forms">
             Title="{Binding Title}">
            
    
    <ContentPage.BindingContext>
        <vm:VisualizeViewModel />
    </ContentPage.BindingContext>
    
    
    
    <Grid VerticalOptions="FillAndExpand" HorizontalOptions="Fill">
        <views:SKCanvasView x:Name="canvas" PaintSurface="OnPaintSample" VerticalOptions="StartAndExpand" HorizontalOptions="Fill">        
        </views:SKCanvasView>
        <views:SKCanvasView x:Name="canvas2" PaintSurface="OnPaintSample2" VerticalOptions="CenterAndExpand" HorizontalOptions="Fill">        
        </views:SKCanvasView>
    </Grid>
    
    <ContentPage.Resources>
        <ResourceDictionary>
            <!--Page Level Resources: Compatible with Xamarin Live Player -->
            <Color x:Key="Primary">#2196F3</Color>
            <Color x:Key="Accent">#96d1ff</Color>
            <Color x:Key="LightTextColor">#999999</Color>
            
        </ResourceDictionary>
    </ContentPage.Resources>
</ContentPage>